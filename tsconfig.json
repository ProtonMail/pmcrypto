{
    "compilerOptions": {
        "target": "es2021",
        "moduleResolution": "node",
        "module": "esnext",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "noEmit": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true, // for BN.js (forwarding tests)
        "types": ["webpack-env", "mocha"], // avoid pulling in node types
        "lib": ["dom", "esnext"]
    },
    "include": [
        "./test/**/*"
    ],
    "files": ["./lib/index.ts"]
}

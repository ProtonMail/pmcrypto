{
  "name": "pmcrypto",
  "version": "6.6.0",
  "description": "",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./lib/pmcrypto.js",
  "sideEffects": false,
  "browser": {
    "buffer": false,
    "stream": false
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "lint": "eslint $(find lib -type f -name '*.js')  --quiet",
    "pretty": "prettier --write $(find lib -type f -name '*.js')",
    "postversion": "git push && git push --tags",
    "test-type-definitions": "tsc lib/index.d.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProtonMail/pmcrypto.git"
  },
  "author": "ProtonMail",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProtonMail/pmcrypto/issues"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/**/*.spec.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "test/": "build/test/"
      },
      "compile": "tsc"
    }
  },
  "homepage": "https://github.com/ProtonMail/pmcrypto#readme",
  "dependencies": {
    "@openpgp/asmcrypto.js": "^2.3.2",
    "@openpgp/tweetnacl": "^1.0.3",
    "@openpgp/web-stream-tools": "0.0.6",
    "openpgp": "^5.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "ava": "^3.15.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^1.1.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^11.2.6",
    "mocha": "^9.1.3",
    "prettier": "^1.14.3",
    "typescript": "^4.2.4"
  }
}
